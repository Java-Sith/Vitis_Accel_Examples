{
    "name": "Xilinx AIE2 Validate Test",
    "description": [ "Xilinx AIE2 Validate example"
    ],
    "flow": "versal",
    "platform_allowlist": [ 
        "v70"
    ],
    "platform_blocklist": [
        "u25_",
        "u30",
        "u200",
        "zc",
        "vck190",
        "vck5000",
        "u250",
        "aws-vu9p-f1",
        "samsung",
        "u2_",
        "x3522pv",
        "nodma"
    ],
    "launch": [
        {
            "name" : "hwemu-launch",
            "target" : "hw_emu"
        },
        {
            "name" : "hw-launch"
        }
    ],
    "host": {
        "host_exe": "host.exe", 
        "compiler": {
            "sources": [
                "PROJECT/sw/host.cpp",
            	"PROJECT/sw/pl_controller.cpp"
            ], 
            "includepaths": [
                "PROJECT/pl_kernels", 
                "PROJECT/sw"
            ]
        },
        "linker" : {
		    "options": "-lgcc -lc -lxrt_coreutil -lpthread -lrt -ldl -lcrypt -lstdc++ -L$(XILINX_XRT)/lib/  -Wl,-rpath-link,$(XILINX_XRT)/lib"
        }
    }, 
    "v++": {
        "compiler": {
            "includepaths": [
                "PROJECT/pl_kernels",
                "$(XILINX_VITIS)/aietools/include"
             ]
        },
        "linker": {
			"ldclflags" : [
				"--config PROJECT/system.cfg"
			]
		}
    },
    "containers": [
        {
            "name": "VPP_LDFLAGS_v70_pcie_pl_controller.xclbin",
            "accelerators": [
                {
                    "location": "PROJECT/pl_kernels/pl_controller_top.cpp", 
                    "frequency": 250.0, 
                    "clflags": "--verbose", 
                    "name": "pl_controller_top"
                },
                {
                    "location": "PROJECT/pl_kernels/sender_receiver.cpp", 
                    "frequency": 250.0, 
                    "clflags": "--verbose", 
                    "name": "sender_receiver"
                }
            ], 
            "frequency": 250.0
        }
    ],
    "aiecompiler": {
        "compiler": {
            "includepaths": [
              "PROJECT/aie",
              "PROJECT/aie/kernels",
              "PROJECT/pl_kernels"
            ]
        }
    }, 
    "aiecontainers": [
        {
            "accelerators": [
                {
                    "location": "PROJECT/Work/ps/c_rts/aie_control_xrt.cpp", 
                    "workdir": "./Work", 
                    "option": "--pl-freq=1000 --dataflow -v",
                    "name": "libadf.a"
                }
            ]
         }
    ],
    "match_makefile": "false",
    "match_ini" : "false",
    "targets": [
        "hw", 
        "hw_emu"
    ], 
    "testinfo": {
        "disable": false, 
        "jobs": [
            {
                "index": 0, 
                "dependency": [], 
                "env": "", 
                "cmd": "", 
                "max_memory_MB": 32768, 
                "max_time_min": {
                    "vitis_hw_build": 470, 
                    "vitis_hw_emu": 200, 
                    "vitis_hw_run": 30
                }
            }
        ], 
        "targets": [
            "vitis_hw_emu", 
            "vitis_hw_build", 
            "vitis_hw_run"
        ], 
        "category": "canary"
    }
}
